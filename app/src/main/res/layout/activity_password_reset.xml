<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PasswordResetActivity">

    <include layout="@layout/app_bar_layout" android:id="@+id/password_reset_toolbar"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/password_reset_toolbar"
        android:text="Enter Your Email-ID"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/password_reset_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/password_reset_toolbar"
        android:layout_marginTop="70dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email ID"
            android:inputType="textEmailAddress"
            android:textColor="@color/colorPrimaryDark"/>
    </android.support.design.widget.TextInputLayout>


    <Button
        android:id="@+id/password_rest_submit_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:textColor="#fff"
        android:textSize="18sp"
        android:layout_below="@id/password_reset_email"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:text="Reset"
        android:textAllCaps="false" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="*NOTE: By clicking Reset, you will receive link to reset your password."
        android:textSize="17sp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_below="@id/password_rest_submit_btn"
        android:layout_marginTop="30dp"
        android:textColor="#000"/>

</RelativeLayout>